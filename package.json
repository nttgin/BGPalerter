{
  "name": "bgpalerter",
  "version": "1.20.2",
  "description": "",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "babel": "./node_modules/.bin/babel",
    "test": "./node_modules/.bin/mocha tests --require @babel/register",
    "build": "./build.sh",
    "watch-and-serve": "nodemon -e yml,js,json,txt --inspect --exec babel-node index.js",
    "serve": "babel-node index.js",
    "start": "forever start --pidFile ~/bgpalerter.pid -c \"babel-node\" index.js> /dev/null && printf \"BGPalerter started\\n\"",
    "status": "forever list",
    "stop": "forever stop \"$(< ~/bgpalerter.pid)\"",
    "restart": "forever restart \"$(< ~/bgpalerter.pid)\"",
    "update": "git update-index --assume-unchanged config.yml && git update-index --assume-unchanged prefixes.yml && git pull",
    "generate-prefixes": "babel-node index.js generate"
  },
  "author": "Massimo Candela",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.6.3",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.6.3",
    "chai": "^4.2.0",
    "chai-subset": "^1.6.0",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.1",
    "read-last-lines": "^1.7.1"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "babel-upgrade": "^1.0.1",
    "batch-promises": "^0.0.3",
    "brembo": "^2.0.3",
    "event-stream": "^4.0.1",
    "forever": "^1.0.0",
    "ip-address": "^6.1.0",
    "js-yaml": "^3.13.1",
    "nodemailer": "^6.2.1",
    "path": "^0.12.7",
    "pkg": "^4.4.0",
    "pubsub-js": "^1.7.0",
    "resnap": "^1.0.1",
    "websocket-stream": "^5.5.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.9.0",
    "ws": "^7.0.0",
    "yargs": "^14.0.0",
    "yarn": "^1.16.0"
  },
  "pkg": {
    "scripts": [
      "./inputs/*.js",
      "./monitors/*.js",
      "./reports/*.js",
      "./connectors/*.js"
    ],
    "assets": [
      "./bin/config.yml"
    ],
    "targets": [
      "node10"
    ]
  }
}
